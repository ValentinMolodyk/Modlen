.item
  /*background: #FFFFFF*/
  &__img-wrap
    border 1px solid #f3f3f3
    text-align center
    &_b_none
      border none




  &__name-link
    border-bottom 2px solid #deead2
    text-decoration none
    padding-bottom 2px
    &:link, &:visited
      color #006902

    &:hover,&:active
      opacity .8
      border-bottom none

  &__rotator
    display block
    background url("../../../img/icon/rotator.gif")
    width 43px
    height 23px

  &__like-off
    text-decoration none
    display block
    .fa-heart
      display none
    .fa-heart-o
      font-size: 25px
      color #c41131
      opacity .4

    &:hover
      .fa-heart-o
        display none
      .fa-heart
        display inline-block
        font-size: 25px
        color #c41131

  &__like-on
    text-decoration none
    display block
    .fa-heart-o
      display none
    .fa-heart
      display inline-block
      font-size: 25px
      color #c41131

  &__img-link_bs
    img
      box-shadow 0 6px 55px -15px #000
      filter unquote('progid:DXImageTransform.Microsoft.shadow(direction=150, color=#000000, strength=5)')



  /*Выплывающий блок выбора цвета*/
  &_choice
    position relative
    .color-choice
      position absolute
      top 30%
      left 0
      opacity .0
      display block
      z-index -1
      transition 0.5s ease 0.1s
      -webkit-transition  0.5s ease 0.1s
      -o-transition  0.5s ease 0.1s
      -moz-transition 0.5s ease 0.1s

      &__item
        width 30px
        padding-left 4px
        border-radius 10px 0 0 10px
        &:hover, &:active
          background-color #dcdde2
      &__link
        font-size 23px
        line-height 30px

        &_color-1
          color #fca61b
        &_color-2
          color #d04298
        &_color-3
          color #2fa0cc
        &_color-4
          color #5eb15f

    &:hover, &:active
      .color-choice
        display block
        opacity 1
        left -33px
        z-index 0







