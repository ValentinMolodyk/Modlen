.item
  /*background: #FFFFFF*/
  &__img-wrap
    text-align center
    &_b_none
      border none
    img
      border 1px solid #f3f3f3
      position relative
      bottom -5px




  &__img-link
    text-decoration none
    &:link, &:visited
      color #006902

    &:hover,&:active
      color red
  &__name-link-wrap
    padding 5px 0 0
    text-align left
  &__name-link
    border-bottom 2px solid #deead2
    display inline-block



  &__rotator
    display block
    background url("../../../img/icon/rotator.svg")
    width 43px
    height 23px

  &__like-off
    text-decoration none
    background url("../../../img/icon/like.svg") 100% 0 no-repeat
    background-size cover
    display block
    width 25px
    height 21px
    &:hover
      background-position 0 0
      opacity .5

  &__like-on
    text-decoration none
    background url("../../../img/icon/like.svg") 0 0 no-repeat
    background-size cover
    display block
    width 25px
    height 21px
    &:hover
      width 28px
      height 23px
      background-position 1% 0

  &__img-link_bs
    img
      box-shadow 0 6px 55px -15px #000
      filter unquote('progid:DXImageTransform.Microsoft.shadow(direction=150, color=#000000, strength=5)')



  /*Выплывающий блок выбора цвета*/
  &_choice
    position relative
    .color-choice
      position absolute
      top 30%
      left 0
      opacity .0
      display block
      z-index -1
      transition 0.5s ease 0.1s
      -webkit-transition  0.5s ease 0.1s
      -o-transition  0.5s ease 0.1s
      -moz-transition 0.5s ease 0.1s

      &__item
        width 30px
        padding-left 4px
        border-radius 10px 0 0 10px
        &:hover, &:active
          background-color #dcdde2
        &_active
          background-color #dcdde2
      &__link
        font-size 23px
        line-height 30px
        display block



        &_color-1
          color #fca61b
        &_color-2
          color #d04298
        &_color-3
          color #2fa0cc
        &_color-4
          color #5eb15f

    &:hover, &:active
      .color-choice
        display block
        opacity 1
        left -34px
        z-index 0




