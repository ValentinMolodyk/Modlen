.btn
  font-size: 18px
  display inline-block
  position relative
  border-radius 25px
  border 3px solid #d2f493

  &:link, &:visited
    color #004b01
    text-decoration none
    outline none

  &:hover, &:active, &:focus
    outline none

  &_box-shadow
    &:before
      content ""
      position absolute
      height 3px
      width 66%
      bottom -2px
      right 17%
      background: -moz-radial-gradient(center, ellipse cover,  rgba(57,108,3,1) 0%, rgba(0,0,0,0) 100%); /* FF3.6+ */
      background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(57,108,3,1)), color-stop(100%,rgba(0,0,0,0))); /* Chrome,Safari4+ */
      background: -webkit-radial-gradient(center, ellipse cover,  rgba(57,108,3,1) 0%,rgba(0,0,0,0) 100%); /* Chrome10+,Safari5.1+ */
      background: -o-radial-gradient(center, ellipse cover,  rgba(57,108,3,1) 0%,rgba(0,0,0,0) 100%); /* Opera 12+ */
      background: -ms-radial-gradient(center, ellipse cover,  rgba(57,108,3,1) 0%,rgba(0,0,0,0) 100%); /* IE10+ */
      background: radial-gradient(ellipse at center,  rgba(57,108,3,1) 0%,rgba(0,0,0,0) 100%); /* W3C */
      box-shadow 0 1px 15px 0px #353535
      -webkit-box-shadow 0 1px 15px 0px #353535


  &_green
    background: #ffffff; /* Old browsers */
    background: -moz-radial-gradient(center, ellipse cover,  #ffffff 0%, #eef5d4 100%); /* FF3.6+ */
    background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#ffffff), color-stop(100%,#eef5d4)); /* Chrome,Safari4+ */
    background: -webkit-radial-gradient(center, ellipse cover,  #ffffff 0%,#eef5d4 100%); /* Chrome10+,Safari5.1+ */
    background: -o-radial-gradient(center, ellipse cover,  #ffffff 0%,#eef5d4 100%); /* Opera 12+ */
    background: -ms-radial-gradient(center, ellipse cover,  #ffffff 0%,#eef5d4 100%); /* IE10+ */
    background: radial-gradient(ellipse at center,  #ffffff 0%,#eef5d4 100%); /* W3C */
    filter 'progid:DXImageTransform.Microsoft.Alpha(GradientType=1, StartColorstr=#ffffff, EndColorstr=#eef5d4)' % (color1 color2)
    box-shadow inset 0 -12px 3px 5px #cfde9b
    -webkit-box-shadow inset 0 -12px 3px 5px #cfde9b
    &:hover
      box-shadow inset 0 -12px 9px 5px #bcca8e
    &:focus
      outline none

  &_in-shadow
    display block
    padding 3px 13px
    box-shadow 0 2px 3px 0px #000000
    -webkit-box-shadow 0 2px 3px 0px #000000
    border-radius 25px