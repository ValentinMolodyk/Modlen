.summary
  background #fbf7ee
  border-top-left-radius 15px 15px
  border-bottom-left-radius 15px 15px
  behavior url(../../../img/pie/PIE.htc)

  &__head
    background: -moz-linear-gradient(top,  #9fcc93 0%, #86bb77 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#9fcc93), color-stop(100%,#86bb77)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top,  #9fcc93 0%,#86bb77 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top,  #9fcc93 0%,#86bb77 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top,  #9fcc93 0%,#86bb77 100%); /* IE10+ */
    background: linear-gradient(to bottom,  #9fcc93 0%,#86bb77 100%); /* W3C */
    height 36px
    color #ffffff
    border-top-left-radius 15px 15px
    text-indent 17px
    line-height: 28px
    filter 'progid:DXImageTransform.Microsoft.Gradient(GradientType=0, StartColorstr=#9fcc93, EndColorstr=#86bb77)' % (color1 color2)

    &_br-top
      border-top-right-radius 15px 15px
  &_br
    border-top-right-radius 15px 15px
    border-bottom-right-radius 15px 15px


  &__pay-variant
    float right
    top 11px
    position relative

  &_bs
    box-shadow: 0 30px 102px -53px #000;

  &__save-shopping
    font-size: 12px
    border-bottom 1px solid #ffffff
    transition 0.4s ease-out
    -webkit-transition  0.4s ease-out
    -o-transition  0.4s ease-out
    -moz-transition 0.4s ease-out
    u
      &:after
        bottom 1px
    &:link, &:visited
      color #ffffff
    &:hover, &:active
      color #000000
      border none

.l-summary__5
  .summary__info
    line-height 1.3


.summary-i
  background #fbf7ee
  border-top-left-radius 15px 15px
  padding 26px 7px 5px 18px
  position relative
  top -9px
  &_br-top
    border-top-right-radius 15px 15px

  &_pt
   padding-top 20px







/* price общий + модификации */
.price
  clear fix
  &__amount
    font-size: 45px
    line-height 40px
    
    .fa-usd
      font-size: 24px
      position relative
      top -11px

    &_td
      position relative
      &:before
        content ""
        position absolute
        height 1px
        width 100%
        top 7px
        background-color #c41131

  &__around
    color #676566
    font-size: 11px
    padding-left 18px
    white-space pre

  &__like-icon
    display inline-block
    width 34px
    height 28px
    background url("../../../img/icon/like.png") 100% 0
    position relative
    top 7px
    left -3px
    &:hover
      background-position -1% 0

.l-summary__2
  .l-price__l
    float left
    width 50%

  .l-price__r
    float right
    width 50%
    text-align center

  /*block 2 - Total!!*/
  .l-summary__l, .l-summary__c, .l-summary__r
    display inline-block
    vertical-align bottom

  .l-summary__c
    margin-left 33px
  .l-summary__r
    margin 0 0 5px 19px
    &_offset
      margin 0 0 4px 26px
    .summary__info
      font-style italic

 /*price end*/


.option-list
  clear fix
  margin-left -6px

  &__item
    float left
    
  &__link
    font-size: 15px
    padding 6px 6px 5px
    border-radius 5px 5px
    transition background 0.3s ease-out
    -webkit-transition background 0.3s ease-out
    -o-transition background 0.3s ease-out
    -moz-transition background 0.3s ease-out

    u
      &:after
        border-top-color #bbd1a3
        bottom 1px

    &:link, &:visited
      color #000000
    &:hover, &:active
      background #ece8df
      box-shadow inset 0 1px 7px -3px #000000
      -webkit-box-shadow  inset 0 1px 7px -3px #000000
      u
        &:after
          border-top none
    &_active
      background #ece8df
      box-shadow inset 0 1px 7px -3px #000000
      -webkit-box-shadow  inset 0 1px 7px -3px #000000
      u
        &:after
          border-top none
  &__count
    margin-left 5px

  &__arrow
    display inline-block
    vertical-align middle

  &__info
    display inline-block
    vertical-align middle
    font-size: 15px
    &_fw
      font-weight bold

  &__arrow-up
    display block
    background url("../../../img/icon/arrow-up-crystal.png")
    width 12px
    height 10px

    &:hover
      opacity .6

  &__arrow-down
    display block
    background url("../../../img/icon/arrow-down-crystal.png")
    width 12px
    height 10px

    &:hover
      opacity .6

.l-summary
  &__3-i
    padding 7px 0 11px 16px

  &__4-i
    padding 8px 0 10px 3px
    clear fix

  &__5-i
    padding-left 17px

  &__3
    .summary__info
      font-style italic
      font-size:14px
      text-indent 154px
  &__r-i
    padding 4px 35px 6px 25px
    background: url("../../../img/icon/arrow-long.png") center left no-repeat
    background-size 100%

