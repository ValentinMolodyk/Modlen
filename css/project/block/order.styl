.order

  &__name-link
    border-bottom 2px solid #deead2
    text-decoration none
    padding-bottom 2px
    &:link, &:visited
      color #006902

    &:hover,&:active
      opacity .8
      border-bottom none

    &_fs_18
      font-size: 18px

  &__text
    padding 2px 0 14px

  &__measure
    u
      &:after
        border-top 1px solid #006902
        bottom -1px

    &:link, &:visited
      color #006902
    &:hover, &:active
      opacity .8
      u
        &:after
          border-top none

  &__measure_c_red
